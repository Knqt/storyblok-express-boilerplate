{{{ _editable }}}
<section{{#if background}} style="background-image: url('{{img background size='1200x0' }}')"{{/if}} class="header-section-1 bg-1 header-js" id="header">
  <div class="overlay-color">
    <div class="container">
      <div class="section-separator sp-top">

        <div class="part-1">
          <div class="part-inner text-center mr-small">

            {{#if logo}}
            <a href="/" class="logo-link">
              <img style="width: {{#if logo_width}}{{ logo_width }}{{else}}180{{/if}}px" src="{{img logo size='180x0' }}" data-srcset="{{img logo size='180x0' }} 1x,{{img logo size='360x0' }} 2x" alt="Logo" class="lazyload img-responsive logo">
            </a>
            {{/if}}

            <h1 class="title editable" id="editable">{{ title }}</h1> 

            {{#if cta_button_label}}
            <div class="btn-form m-t-40 btn-scroll">
              <a href="{{ cta_button_link }}" class="btn btn-fill">{{ cta_button_label }}</a>
            </div>
            {{/if}}

            <div class="image-group">
              {{#each images}}{{> (lookup . 'component') }}{{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>